#include <vcl.h>
#pragma hdrstop
#include <math.h>
#include <tchar.h>
#include <stdio.h>

//---------------------------------------------------------------------------

#pragma argsused

int fact(int n)
  { double fact1=1;
  int a = 2*n-1;
	for (int i = 2; i <= a; i++)
	   fact1*=i;

   return fact1;
  }

int _tmain(int argc, _TCHAR* argv[])
{ double x, func, SIN, fact1;
   int n;
	printf("%s", "enter X   ");
	scanf("%f",&x);
	printf("%s", "enter N   ");
	scanf("%d",&n);
	SIN = sin(x);
	for (int i = 1; i <= n; i++)
	 func += powl (-1, i - 1) * powl (x, 2 * i - 1) / fact1;
	printf ("%f=%f\n", SIN, func);
	system("pause");
	return 0;
}
